<p id="notice"><%= notice %></p>

<h1>Credit Cards</h1>
<table id="Cards" class="container-fluid responsive display no-wrap" width="100%">
  <thead>
    <tr>
      <th>Number</th>
      <th>Exp date</th>
      <th>Name on card</th>
      <th>Organisation</th>
      <th>User</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_cards.each do |credit_card| %>
      <tr>
        <td><%= credit_card.number %></td>
        <td><%= credit_card.exp_date %></td>
        <td><%= credit_card.name_on_card %></td>
        <td><%= credit_card.organisation %></td>
        <td><%= credit_card.user.Lname %></td>
		<td>
			<div class="btn-group" role="group" aria-label="Basic example">
			  <%= link_to 'Show', credit_card ,class: "btn btn-outline-secondary"%>
			  <%= link_to 'Edit', edit_credit_card_path(credit_card) ,class: "btn btn-outline-secondary"%>
			  <%= link_to 'Destroy', credit_card, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-outline-secondary"%>
			</div>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Credit Card', new_credit_card_path %>
