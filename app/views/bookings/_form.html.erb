<%= form_with(model: booking, local: true) do |form| %>
  <% if booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% booking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%if admin?%>
	  <div class="field">
		<%= form.label :user_id %>
		<%= form.collection_select :user_id, @users, :id, :full_name, :prompt => "Select an user" %>
	  </div>
	  
	  
	  <div class="field">
		<%= form.label :trip_id %>
		<%= form.collection_select :trip_id, @trips, :id, :Name, :prompt => "Select a Trip" %>
	  </div>
  <%else%>
	<%= form.hidden_field :user_id, :value => current_user.id %>
	<%= form.hidden_field :trip_id, :value => @trip.id %>
	<p>
	  <strong>Name:</strong>
	  <%= @trip.Name %>
	</p>

	<p>
	  <strong>Lakes:</strong>
	  <%= @trip.Lakes %>
	</p>

	<p>
	  <strong>Date:</strong>
	  <%= @trip.Date %>
	</p>

	<p>
	  <strong>Price per person:</strong>
	  <%= @trip.Price %>
	</p>

	<p>
	  <strong>Availableplaces:</strong>
	  <%= @trip.AvailablePlaces %>
	</p>
  <%end%>
  <div class="field">
    <%= form.label :NoOfPersons, "Number of persons" %>
    <%= form.number_field :NoOfPersons, value: '1', in: 1..20 %>
  </div>
  
  

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
	<% end %>
	<%= button_to 'Cancel', url_for(:back), class: "btn btn-primary", method: "get" %>
  </div>
