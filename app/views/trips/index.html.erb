<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table  id="Trips" class="container-fluid display responsive no-wrap mw-100 mh-50">
  <thead>
    <tr>
      <th>Name</th>
      <th>Lakes</th>
      <th>Date</th>
      <th>Price</th>
      <th>Availableplaces</th>
	  <%if admin?%>
      <th></th>
	  <%end%>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.Name %></td>
        <td><%= trip.Lakes %></td>
        <td><%= trip.Date %></td>
        <td><%= trip.Price %></td>
        <td><%= trip.AvailablePlaces %></td>
		<% if admin?%>
		<td>
			<div class="btn-group" role="group" aria-label="Basic example">
			  <%= link_to 'Show', trip ,class: "btn btn-outline-secondary"%>
			  <%= link_to 'Edit', edit_trip_path(trip) ,class: "btn btn-outline-secondary"%>
			  <%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-outline-secondary"%>
			</div>
		</td>
		<%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

