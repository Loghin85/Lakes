<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table>
  <thead>
    <tr>
      <th>Lakes</th>
      <th>Distance</th>
      <th>Duration</th>
      <th>Price</th>
      <th>Avalableplaces</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.Lakes %></td>
        <td><%= trip.Distance %></td>
        <td><%= trip.Duration %></td>
        <td><%= trip.Price %></td>
        <td><%= trip.AvalablePlaces %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

